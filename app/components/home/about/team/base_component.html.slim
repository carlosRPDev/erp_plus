section[class="bg-white py-16" data-controller="animate"]
  div[class="container mx-auto px-6 text-center"]
    h2[class="text-3xl font-bold text-gray-800 mb-10"] Nuestro Equipo

    div[class="flex flex-wrap gap-8 justify-center cursor-pointer" class=@grid_cols]
      - team_members.each do |member|
        div[
          class="
            rounded-2xl
            p-8
            flex flex-col items-center text-center
            bg-white/10 dark:bg-white/10
            backdrop-blur-2xl
            border border-white/20 dark:border-white/20
            hover:border-orange-400/50
            shadow-[0_8px_30px_rgba(0,0,0,0.12)]
            hover:shadow-[0_12px_45px_rgba(0,0,0,0.25)]
            transform transition-all duration-500
            opacity-0 translate-y-10
            hover:scale-105
          "
          data-animate-target="target"
        ]
          img[
            class="rounded-full w-32 h-32 mx-auto mb-4 object-cover
                   shadow-[0_4px_20px_rgba(0,0,0,0.15)]
                   ring-2 ring-white/30 dark:ring-white/30"
            src=member[:image]
            alt=member[:name]
          ]
          h3[class="text-xl font-bold text-gray-800 dark:text-gray-800"] = member[:name]
          p[class="text-orange-500 dark:text-orange-300 font-medium"] = member[:role]
